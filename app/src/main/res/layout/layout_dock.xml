<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout 
        android:layout_width="540dp" android:layout_height="140dp"
        android:background="@drawable/rounded_bg" android:gravity="center" android:padding="24dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp">
        <View android:layout_width="8dp" android:layout_height="90dp" android:background="#00E5FF" android:layout_marginEnd="28dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="TV BOX RIBBON" android:textColor="#FFFFFF" android:textSize="24sp" android:textStyle="bold" />
    </LinearLayout>
    <ImageButton android:id="@+id/btn_close_dock" android:layout_width="44dp" android:layout_height="44dp"
        android:layout_gravity="top|end" android:background="@android:color/holo_red_dark"
        android:src="@android:drawable/ic_menu_close_clear_cancel" android:tint="#FFFFFF" />
</FrameLayout>