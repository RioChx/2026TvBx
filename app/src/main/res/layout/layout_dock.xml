<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/artistic_glass_panel"
    android:padding="16dp"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    
    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/analog_clock_frame">
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:format12Hour="hh:mm"
            android:textColor="#00E5FF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </FrameLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="#20FFFFFF"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/artistic_btn_bg"
        android:src="@drawable/ic_home_art"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:tint="#00E5FF" />

    <ImageButton
        android:id="@+id/btn_recent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/artistic_btn_bg"
        android:src="@drawable/ic_recent_art"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:tint="#A855F7" />

    <ImageButton
        android:id="@+id/btn_volume"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/artistic_btn_bg"
        android:src="@drawable/ic_volume_art"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:tint="#22C55E" />

</LinearLayout>